name: Ruby

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  test:

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - name: Set up Ruby
        uses: ruby/setup-ruby
        with:
          ruby-version: '2.7.3'
      - name: Install dependencies
        run: bundle install
      - name: Run tests
        run: bundle exec rspec
